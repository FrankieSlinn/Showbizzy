<div class="display-container">
<h2>My Shows</h2>
<% current_user.shows.each do |show| %>
  <div>
    <h3><span class="display-title"><%= show.title %></span></h3>
    <p><%= show.description %></p>
    <% if show.places.first %>
<p><%= "Venue name #{show.places.first.placevenue}" %></p>
<% end %>


     <td> <%= link_to "View Show", show_path(show) %></td>
     <br />
     <br />
  <td><%= button_to "Delete Show", show_path(show), method: :delete, data: { turbo_action: "remove" }, confirm: 'Are you sure you want to delete this Show?' %></td>  
   <br />
   <td> <%= link_to "Edit Show", edit_show_path(show) %></td>

  

  </div>
  </div>

<% end %>

