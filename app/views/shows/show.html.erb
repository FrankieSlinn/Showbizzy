<h1><%= @show.title %>!!</h1>
<ul>
  <li>Genre <%= @show.genre %></li>
  <li>Performer <%= @show.performer %></li>
  <li>
    <% if @show.imageup.attached? %>
      <img src="<%= url_for(@show.imageup) %>">
    <% end %>
  </li>
  <li>Description <%= @show.description %></li>

  </ul>
    <% @places.each do |place| %>
      <div class="place">
        <p>Venue: <%= place.placevenue %></p>
        <p>Location: <%= place.placetown %></p>
        <p>Address: <%= place.placeaddress %></p>
        <p>Description: <%= place.placeinfo %></p>
      </div>
      <br /><br />
    <% end %>

  
</ul>
  <li><% if user_signed_in? %>
  <%= form_for @review || Userreview.new do |review_form| %>
   <%= review_form.hidden_field :user_id, value: current_user.id %>
  <%= review_form.hidden_field :show_id, value: @show.id %>
  <div class="field">
    <%= review_form.label :rating, 'Rating (1 lowest, 5 highest)' %>
    <%= review_form.text_field :rating %>
  </div>
   <div class="field">
    <%= review_form.label :review, 'Review' %>
    <%= review_form.text_field :review %>
  </div>
  <div class="actions">
    <%= review_form.submit 'Submit' %>
  </div>
<% end %>

    <% end %></li>

<h3>Reviews</h3>
<% @reviews.each do |r| %>
  <div class="place">
    <p>Rating: <%= r.rating %></p>
    <p>Review: <%= r.review %></p>
  </div>
<% end %>