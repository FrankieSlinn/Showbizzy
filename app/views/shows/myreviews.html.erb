<div class='display-container'>

  <h2>My Reviews</h2>

<%= @userreviews.each do |review| %>
<div>
   <% @show=Show.find(review.show_id) %>
     <h4>Show Title <%= Show.find(review.show_id).title %></h4>
    <p>Rating <%= review.rating %>
    <p> Review <%= review.review %>
    <%=render 'review_form'%>
   
    <p><%= button_to "Delete Review", show_path(review), method: :delete, data: { turbo_action: "remove" }, confirm: 'Are you sure you want to delete this Review?' %></p>
    </div>
    <% end %>
    </div>
  <br />




