<div class="display-container">
  <%= form_for @show || Show.new do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="field">
      <span class="label">
        <%= label_tag :confirmation, '* I confirm this is my show or that I have the permission of the person/group creating the show to post' %>
      </span>
      <br />
      <%= check_box_tag :confirmation, '1', false, required: true %>
    </div>
    <br />
    <div class="field">
      <span class="label"><%= f.label :title, '* Title' %></span>
      <br />
      <br />
      <%= f.text_field :title %>
    </div>
    <br />
    <% @dropdown_values = ['Comedy', 'Theatre', 'Music',  'Dance', 'Other']%>
    <div class="field">
      <span class="label"> <%= f.label :genre, '* What type of show is it?' %></span>
      <br />
      <br />
      <%= f.select :genre, options_for_select(@dropdown_values) %>
    </div>
    <br />
    <div class="field">
      <span class="label">  <%= f.label :description, '* Description' %></span>
      <br/>
      <br />
      <%= f.text_field :description %>
    </div>
    <br/>
    <div class="field">
      <span class="label"><%= f.label :imageup, '* Update a picture of the show' %></span>
      <br />
      <br />
      <%= f.file_field :imageup %>
    </div>
    <br/>
    <div class="field">
      <span class="label">   <%= f.label :performer, '* Performer' %></span>
      <br />
      <br />
      <%= f.text_field :performer %>
    </div>
    <br/>
   <div class="field">
  <span class="label">
    <%= label_tag :terms_and_conditions, '* I have read and understood the Terms and Conditions.<br />'.html_safe + link_to('Link to T&Cs', '/terms_and_conditions', class: 'terms-and-conditions-form') %>
  </span>
  <br />
  <%= check_box_tag :confirmation, '1', false, required: true %>
</div>
    <%= f.submit 'Submit', class: 'button' %>
  <% end %>
</div>
